<a href="/todos/new"> Create </a>
<ul>
  {{#each todos}}
  <li>
    <input type="checkbox" name="done" {{#if this.done}} checked {{/if}} disabled>
    {{{this.name}}}
    <a href="/todos/{{this._id}}">details</a>
    <a href="/todos/{{this._id}}/edit">edit</a>
    <form action="/todos/{{this._id}}/delete" method="post">
      <button type="submit">delete</button>
    </form>
  </li>
  {{/each}}
</ul>